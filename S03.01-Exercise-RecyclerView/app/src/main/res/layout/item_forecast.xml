<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:orientation="vertical">

	<TextView
		android:id="@+id/tv_weather_data"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="@dimen/weather_data_text_view_padding"
		android:textSize="@dimen/font_size_22sp" />

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_marginLeft="@dimen/divider_margin"
		android:layout_marginRight="@dimen/divider_margin"
		android:background="@color/divider" />
</LinearLayout>